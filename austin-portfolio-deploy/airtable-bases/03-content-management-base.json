{
  "baseName": "Blaze Intelligence - Content Operations",
  "description": "Marketing assets, case studies, proposals, and sales enablement materials",
  "tables": {
    "content_library": {
      "name": "Content Library",
      "description": "Master database of all marketing and sales content",
      "fields": [
        {
          "name": "Content Title",
          "type": "singleLineText",
          "required": true
        },
        {
          "name": "Content Type",
          "type": "singleSelect",
          "options": [
            "Case Study",
            "White Paper", 
            "Product Demo",
            "Competitive Analysis",
            "Pricing Sheet",
            "Proposal Template",
            "ROI Calculator",
            "Technical Specification",
            "Marketing One-Pager",
            "Blog Post",
            "Video Content",
            "Presentation Deck",
            "Email Template",
            "Social Media Post"
          ],
          "required": true
        },
        {
          "name": "Target Audience",
          "type": "multipleSelect",
          "options": [
            "General Managers",
            "Analytics Directors",
            "Coaches",
            "Technical Teams",
            "C-Suite Executives",
            "Procurement",
            "End Users",
            "Media/Press",
            "Investors",
            "Partners"
          ]
        },
        {
          "name": "Sport Focus",
          "type": "multipleSelect",
          "options": [
            "Multi-Sport",
            "MLB",
            "NFL", 
            "NBA",
            "NCAA Football",
            "NCAA Baseball",
            "High School Sports",
            "Youth Baseball"
          ]
        },
        {
          "name": "Content Status",
          "type": "singleSelect",
          "options": [
            "Planning",
            "In Development",
            "Review Required",
            "Approved",
            "Published",
            "Needs Update",
            "Archived"
          ],
          "required": true
        },
        {
          "name": "File URL",
          "type": "url"
        },
        {
          "name": "Thumbnail",
          "type": "attachment"
        },
        {
          "name": "Description",
          "type": "longText"
        },
        {
          "name": "Key Messages",
          "type": "multipleSelect",
          "options": [
            "67-80% Cost Savings",
            "Vision AI Technology",
            "Micro-Expression Analysis",
            "Character Assessment",
            "Real-time Processing",
            "Multi-Sport Platform", 
            "94.6% Accuracy",
            "87ms Latency",
            "2.8M+ Datapoints",
            "Championship Results"
          ]
        },
        {
          "name": "Usage Count",
          "type": "number",
          "description": "Times content has been used/sent"
        },
        {
          "name": "Last Used Date",
          "type": "date"
        },
        {
          "name": "Performance Rating",
          "type": "rating",
          "max": 5,
          "description": "Effectiveness rating based on client feedback"
        },
        {
          "name": "Created Date",
          "type": "createdTime"
        },
        {
          "name": "Created By",
          "type": "singleSelect",
          "options": ["Austin Humphrey", "Claude AI", "External Agency"],
          "default": "Austin Humphrey"
        },
        {
          "name": "Tags",
          "type": "multipleSelect",
          "options": [
            "High Priority",
            "Needs Translation",
            "Video Required",
            "Interactive",
            "Data Heavy",
            "Client Favorite",
            "Competitive Intel",
            "Technical Deep Dive"
          ]
        }
      ],
      "sampleData": [
        {
