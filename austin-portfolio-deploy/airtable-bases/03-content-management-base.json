      ]
    },
    "proposals": {
      "name": "Proposals",
      "description": "Custom proposals and client-specific documents",
      "fields": [
        {
          "name": "Proposal Title",
          "type": "singleLineText",
          "required": true
        },
        {
          "name": "Client Organization",
          "type": "linkedRecord",
          "linkedTable": "organizations"
        },
        {
          "name": "Deal Reference",
          "type": "linkedRecord", 
          "linkedTable": "deals"
        },
        {
          "name": "Proposal Type",
          "type": "singleSelect",
          "options": [
            "Initial Proposal",
            "Technical Response",
            "Pricing Quote", 
            "Statement of Work",
            "Contract Amendment",
            "Renewal Proposal"
          ]
        },
        {
          "name": "Proposal Status",
          "type": "singleSelect",
          "options": [
            "Draft",
            "Internal Review",
            "Client Review",
            "Negotiation",
            "Approved",
            "Declined",
            "Expired"
          ],
          "required": true
        },
        {
          "name": "Proposal Value",
          "type": "currency"
        },
        {
          "name": "Sent Date",
          "type": "date"
        },
        {
          "name": "Response Due Date",
          "type": "date"
        },
        {
          "name": "Document URL",
          "type": "url"
        },
        {
          "name": "Content Components",
          "type": "linkedRecord",
          "linkedTable": "content_library"
        },
        {
          "name": "Custom Sections",
          "type": "multipleSelect",
          "options": [
            "Executive Summary",
            "Technical Architecture",
            "Implementation Timeline",
            "ROI Analysis",
            "Case Studies",
            "Pricing Details",
            "Terms & Conditions",
            "Support Structure",
            "Success Metrics",
            "Next Steps"
          ]
        },
        {
          "name": "Client Feedback",
          "type": "longText"
        },
        {
          "name": "Win Probability",
          "type": "number",
          "description": "Updated probability based on proposal reception"
        }
      ]
    },
    "campaigns": {
      "name": "Marketing Campaigns",
      "description": "Marketing campaign planning and content coordination",
      "fields": [
        {
          "name": "Campaign Name",
          "type": "singleLineText",
          "required": true
        },
        {
          "name": "Campaign Type",
          "type": "singleSelect",
          "options": [
            "Product Launch",
            "Thought Leadership",
            "Lead Generation", 
            "Client Testimonials",
            "Competitive Positioning",
            "Event Marketing",
            "Partnership Announcement",
            "Case Study Series"
          ]
        },
        {
          "name": "Target Audience",
          "type": "multipleSelect",
          "options": [
            "MLB Organizations",
            "NFL Organizations",
            "NBA Organizations", 
            "NCAA Programs",
            "High School Coaches",
            "Youth Organizations",
            "Sports Media",
            "Industry Analysts",
            "Investors"
          ]
        },
        {
          "name": "Campaign Status",
          "type": "singleSelect",
          "options": [
            "Planning",
            "Content Creation",
            "Review & Approval",
            "Active",
            "Paused",
            "Completed",
            "Analyzing Results"
          ]
        },
        {
          "name": "Launch Date",
          "type": "date"
        },
        {
          "name": "End Date",
          "type": "date"
        },
        {
          "name": "Budget",
          "type": "currency"
        },
        {
          "name": "Associated Content",
          "type": "linkedRecord",
          "linkedTable": "content_library"
        },
        {
          "name": "Key Metrics",
          "type": "multipleSelect",
          "options": [
            "Lead Generation",
            "Website Traffic",
            "Content Engagement",
            "Brand Awareness",
            "Deal Influence",
            "Media Coverage",
            "Social Shares",
            "Demo Requests"
          ]
        },
        {
          "name": "Results Summary",
          "type": "longText"
        },
        {
          "name": "ROI",
          "type": "number",
          "description": "Campaign return on investment"
        }
      ]
    },
    "media_assets": {
      "name": "Media Assets", 
      "description": "Images, videos, graphics, and multimedia content",
      "fields": [
        {
          "name": "Asset Name",
          "type": "singleLineText",
          "required": true
        },
        {
          "name": "Asset Type",
          "type": "singleSelect",
          "options": [
            "Logo/Branding",
            "Product Screenshot",
            "Demo Video",
            "Infographic",
            "Data Visualization",
            "Team Photo",
            "Event Photo",
            "Social Media Graphic",
            "Presentation Template",
            "Website Asset"
          ]
        },
        {
          "name": "File Format",
          "type": "multipleSelect",
          "options": ["PNG", "JPG", "SVG", "PDF", "MP4", "MOV", "GIF", "PSD", "AI"]
        },
        {
          "name": "Resolution/Size",
          "type": "singleLineText"
        },
        {
          "name": "Usage Rights",
          "type": "singleSelect",
          "options": ["Full Rights", "Licensed", "Stock Photo", "Client Provided", "Approval Required"]
        },
        {
          "name": "File Location",
          "type": "url"
        },
        {
          "name": "Thumbnail Preview",
          "type": "attachment"
        },
        {
          "name": "Tags",
          "type": "multipleSelect", 
          "options": [
            "Blaze Intelligence",
            "Vision AI",
            "Sports Analytics",
            "Technology",
            "Results/Data",
            "Team Action",
            "Professional",
            "High Quality"
          ]
        },
        {
          "name": "Usage Count",
          "type": "number"
        },
        {
          "name": "Last Used",
          "type": "date"
        }
      ]
    }
  },
  "views": {
    "content_library": [
      {
        "name": "High Priority Content",
        "type": "grid",
        "filters": [
          {
            "field": "Tags",
            "condition": "contains",
            "value": "High Priority"
          },
          {
            "field": "Content Status",
            "condition": "is one of",
            "values": ["Approved", "Published"]
          }
        ],
        "sorts": [
          {
            "field": "Performance Rating",
            "direction": "desc"
          }
        ]
      },
      {
        "name": "Needs Update",
        "type": "grid",
        "filters": [
          {
            "field": "Content Status",
            "condition": "is one of", 
            "values": ["Needs Update", "Review Required"]
          }
        ]
      },
      {
        "name": "Client Favorites",
        "type": "grid",
        "filters": [
          {
            "field": "Tags",
            "condition": "contains",
            "value": "Client Favorite"
          }
        ],
        "sorts": [
          {
            "field": "Usage Count",
            "direction": "desc"
          }
        ]
      }
    ],
    "proposals": [
      {
        "name": "Active Proposals",
        "type": "grid",
        "filters": [
          {
            "field": "Proposal Status",
            "condition": "is one of",
            "values": ["Client Review", "Negotiation", "Internal Review"]
          }
        ],
        "sorts": [
          {
            "field": "Response Due Date",
            "direction": "asc"
          }
        ]
      }
    ]
  },
  "automations": [
    {
      "name": "Content Performance Tracking",
      "trigger": "Field updated in Content Library",
      "conditions": [
        {
          "field": "Usage Count",
          "condition": "is greater than",
          "value": 10
        },
        {
          "field": "Performance Rating",
          "condition": "is greater than or equal to",
          "value": 4
        }
      ],
      "actions": [
        {
          "type": "updateRecord",
          "field": "Tags",
          "value": "Client Favorite"
        }
      ]
    },
    {
      "name": "Proposal Follow-up Reminder",
      "trigger": "Field updated in Proposals",
      "conditions": [
        {
          "field": "Proposal Status",
          "value": "Client Review"
        },
        {
          "field": "Response Due Date",
          "condition": "is within",
          "value": "3 days"
        }
      ],
      "actions": [
        {
          "type": "sendEmail",
          "to": "ahump20@outlook.com", 
          "subject": "Proposal Follow-up Due: {Client Organization}",
          "body": "Proposal: {Proposal Title}\\nClient: {Client Organization}\\nValue: {Proposal Value}\\nDue Date: {Response Due Date}\\n\\nFollow-up required within 3 days."
        }
      ]
    }
  ]
}