  "automations": [
    {
      "name": "Integration Failure Alert",
      "trigger": "Field updated in Integrations",
      "conditions": [
        {
          "field": "Connection Status",
          "condition": "is one of",
          "values": ["üî¥ Error", "‚ö´ Disconnected"]
        },
        {
          "field": "Critical Integration",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "sendEmail",
          "to": "ahump20@outlook.com",
          "subject": "üö® CRITICAL: {Integration Name} Integration Failed",
          "body": "Integration: {Integration Name}\\nStatus: {Connection Status}\\nPlatform: {Platform/Service}\\nError Count: {Error Count (24h)}\\nSuccess Rate: {Success Rate (%)}%\\n\\nImmediate attention required - this is a business critical integration.\\n\\nNotes: {Notes}"
        },
        {
          "type": "sendSlackMessage",
          "channel": "#alerts",
          "message": "üö® CRITICAL INTEGRATION FAILURE: {Integration Name} is {Connection Status}"
        }
      ]
    },
    {
