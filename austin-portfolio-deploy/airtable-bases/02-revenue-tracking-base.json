          "Weaknesses": "High cost, limited AI capabilities, slow analysis speed",
          "Competitive Strategy": "Position on 67% cost savings + advanced Vision AI capabilities unavailable in Hudl"
        },
        {
          "Competitor": "Second Spectrum",
          "Product/Service": "NBA Tracking", 
          "Pricing Tier": "Professional",
          "Annual Price": 300000,
          "Blaze Intelligence Equivalent": "Championship Package ($250,000/year)",
          "Blaze Price": 250000,
          "Key Differentiators": ["Character Assessment", "Multi-Sport Coverage", "Cost Efficiency"],
          "Market Share %": 20,
          "Strengths": "Advanced tracking, NBA partnership, sophisticated analytics",
          "Weaknesses": "Basketball-only focus, extremely high cost, complex implementation",
          "Competitive Strategy": "Multi-sport capability + character/grit analysis + 17% cost savings"
        }
      ]
    }
  },
  "views": {
    "deals": [
      {
        "name": "Active Pipeline",
        "type": "grid",
        "filters": [
          {
            "field": "Deal Stage",
            "condition": "is not",
            "value": "Closed Lost"
          },
          {
            "field": "Deal Stage", 
            "condition": "is not",
            "value": "Closed Won"
          }
        ],
        "sorts": [
          {
            "field": "Weighted Value",
            "direction": "desc"
          }
        ]
      },
      {
        "name": "This Quarter",
        "type": "grid",
        "filters": [
          {
            "field": "Quarter",
            "condition": "contains",
            "value": "Q4 2024"
          }
        ]
      },
      {
        "name": "High Value Deals",
        "type": "grid",
        "filters": [
          {
            "field": "Deal Value",
            "condition": "is greater than",
            "value": 100000
          }
        ]
      }
    ]
  },
  "automations": [
    {
      "name": "Deal Stage Progression Alert",
      "trigger": "Field updated in Deals",
      "conditions": [
        {
          "field": "Deal Stage",
          "condition": "is one of",
          "values": ["Proposal Sent", "Negotiation", "Legal Review"]
        }
      ],
      "actions": [
        {
          "type": "sendEmail",
          "to": "ahump20@outlook.com",
          "subject": "Deal Progress: {Deal Name} → {Deal Stage}",
          "body": "Deal: {Deal Name}\\nValue: {Deal Value}\\nProbability: {Probability (%)}%\\nExpected Close: {Expected Close Date}\\n\\nNext steps required for {Deal Stage} stage."
        }
      ]
    },
    {
      "name": "Revenue Target Tracking",
      "trigger": "Field updated in Revenue Forecast",
      "conditions": [
        {
          "field": "Attainment %",
          "condition": "is less than",
          "value": 80
        }
      ],
      "actions": [
        {
          "type": "sendEmail", 
          "to": "ahump20@outlook.com",
          "subject": "Revenue Alert: {Period} Under Target",
          "body": "Period: {Period}\\nTarget: {Total Revenue Target}\\nActual: {Total Revenue Actual}\\nAttainment: {Attainment %}%\\n\\nAction required to hit revenue targets."
        }
      ]
    }
  ]
}