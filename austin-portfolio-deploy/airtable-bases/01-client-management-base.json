{
  "baseName": "Blaze Intelligence - Client Management",
  "description": "Complete client lifecycle management from prospect to expansion",
  "tables": {
    "organizations": {
      "name": "Organizations",
      "description": "Master database of all organizations (prospects, clients, partners)",
      "fields": [
        {
          "name": "Organization Name",
          "type": "singleLineText",
          "description": "Official organization name",
          "required": true
        },
        {
          "name": "Organization Type",
          "type": "singleSelect",
          "options": [
            "MLB Team",
            "NFL Team", 
            "NBA Team",
            "NCAA Division I",
            "High School",
            "Youth Organization",
            "Perfect Game Affiliate",
            "Media Company",
            "Technology Partner",
            "Service Provider"
          ],
          "required": true
        },
        {
          "name": "League/Conference",
          "type": "singleLineText",
          "description": "MLB, NFL, SEC, Big 12, etc."
        },
        {
          "name": "Market Size",
          "type": "singleSelect",
          "options": ["Large Market", "Mid Market", "Small Market", "Emerging"]
        },
        {
          "name": "Primary Contact",
          "type": "linkedRecord",
          "linkedTable": "contacts"
        },
        {
          "name": "Relationship Status",
          "type": "singleSelect",
          "options": [
            "Cold Prospect",
            "Warm Lead",
            "Active Negotiations",
            "Active Client",
            "Expansion Opportunity",
            "Former Client",
            "Strategic Partner"
          ],
          "required": true
        },
        {
          "name": "Revenue Potential",
          "type": "currency",
          "description": "Annual contract value potential"
        },
        {
          "name": "Decision Timeline",
          "type": "singleSelect",
          "options": ["Immediate", "1-3 Months", "3-6 Months", "6-12 Months", "Long Term"]
        },
        {
          "name": "Technology Stack",
          "type": "multipleSelect",
          "options": ["Hudl", "Synergy", "Second Spectrum", "Stats Inc", "Custom Build", "Legacy Systems", "None"]
        },
        {
          "name": "Pain Points",
          "type": "multipleSelect",
          "options": [
            "High Costs",
            "Slow Analysis",
            "Poor Integration",
            "Limited Customization",
            "Lack of Real-time Data",
            "Poor User Experience",
            "Insufficient ROI Tracking"
          ]
        },
        {
          "name": "Competitive Positioning",
          "type": "longText",
          "description": "How we differentiate vs their current solution"
        },
        {
          "name": "Next Action",
          "type": "singleLineText"
        },
        {
          "name": "Last Contact Date",
          "type": "date"
        },
        {
          "name": "Created Date",
          "type": "createdTime"
        },
        {
          "name": "Notes",
          "type": "longText"
        }
      ],
      "sampleData": [
