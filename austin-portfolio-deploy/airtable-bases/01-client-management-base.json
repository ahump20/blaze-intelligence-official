      ]
    },
    "contacts": {
      "name": "Contacts",
      "description": "Individual contact records linked to organizations",
      "fields": [
        {
          "name": "Full Name",
          "type": "singleLineText",
          "required": true
        },
        {
          "name": "Organization",
          "type": "linkedRecord",
          "linkedTable": "organizations"
        },
        {
          "name": "Title/Role",
          "type": "singleLineText"
        },
        {
          "name": "Email",
          "type": "email"
        },
        {
          "name": "Phone",
          "type": "phoneNumber"
        },
        {
          "name": "LinkedIn",
          "type": "url"
        },
        {
          "name": "Decision Maker Level",
          "type": "singleSelect",
          "options": ["Ultimate Decision Maker", "Key Influencer", "Technical Evaluator", "End User", "Gatekeeper"]
        },
        {
          "name": "Communication Preference",
          "type": "singleSelect",
          "options": ["Email", "Phone", "Text", "LinkedIn", "In-Person"]
        },
        {
          "name": "Interaction History",
          "type": "linkedRecord",
          "linkedTable": "interactions"
        },
        {
          "name": "Notes",
          "type": "longText"
        },
        {
          "name": "Created Date",
          "type": "createdTime"
        }
      ],
      "sampleData": [
        {
          "Full Name": "Michael Girsch",
          "Title/Role": "General Manager",
          "Email": "mgirsch@cardinals.com",
          "Decision Maker Level": "Ultimate Decision Maker",
          "Communication Preference": "Email",
          "Notes": "Analytics-focused GM. Previously with Rays. Strong interest in advanced metrics and player development."
        },
        {
          "Full Name": "Jon Robinson",
          "Title/Role": "General Manager", 
          "Email": "jrobinson@titans.com",
          "Decision Maker Level": "Ultimate Decision Maker",
          "Communication Preference": "Phone",
          "Notes": "Values practical applications over theoretical metrics. Focus on team chemistry and character evaluation."
        }
      ]
    },
    "interactions": {
      "name": "Interactions",
      "description": "Record of all client/prospect touchpoints",
      "fields": [
        {
          "name": "Date",
          "type": "date",
          "required": true
        },
        {
          "name": "Contact",
          "type": "linkedRecord",
          "linkedTable": "contacts"
        },
        {
          "name": "Organization",
          "type": "linkedRecord", 
          "linkedTable": "organizations"
        },
        {
          "name": "Interaction Type",
          "type": "singleSelect",
          "options": [
            "Initial Outreach",
            "Discovery Call",
            "Technical Demo",
            "Proposal Presentation",
            "Contract Negotiation",
            "Implementation Planning",
            "Training Session",
            "Check-in Call",
            "Support Request",
            "Expansion Discussion"
          ]
        },
        {
          "name": "Outcome",
          "type": "singleSelect",
          "options": [
            "Positive - Next Steps Defined",
            "Neutral - Information Gathering",
            "Negative - Objections Raised",
            "Closed - Won",
            "Closed - Lost",
            "Follow-up Required"
          ]
        },
        {
          "name": "Summary",
          "type": "longText",
          "required": true
        },
        {
          "name": "Next Action",
          "type": "singleLineText"
        },
        {
          "name": "Next Action Date",
          "type": "date"
        },
        {
          "name": "Austin Notes",
          "type": "longText",
          "description": "Austin's personal insights and strategic thinking"
        }
      ]
    }
  },
  "views": {
    "organizations": [
      {
        "name": "Active Pipeline",
        "type": "grid",
        "filters": [
          {
            "field": "Relationship Status",
            "condition": "is one of",
            "values": ["Warm Lead", "Active Negotiations", "Active Client"]
          }
        ],
        "sorts": [
          {
            "field": "Revenue Potential",
            "direction": "desc"
          }
        ]
      },
      {
        "name": "Championship Targets",
        "type": "grid",
        "filters": [
          {
            "field": "Revenue Potential",
            "condition": "is greater than",
            "value": 100000
          }
        ]
      },
      {
        "name": "Immediate Opportunities",
        "type": "grid",
        "filters": [
          {
            "field": "Decision Timeline", 
            "condition": "is one of",
            "values": ["Immediate", "1-3 Months"]
          }
        ]
      }
    ]
  },
  "automations": [
    {
      "name": "New Prospect Welcome Sequence",
      "trigger": "Record created in Organizations",
      "conditions": [
        {
          "field": "Relationship Status",
          "value": "Cold Prospect"
        }
      ],
      "actions": [
        {
          "type": "createRecord",
          "table": "interactions",
          "fields": {
            "Date": "today",
            "Interaction Type": "Initial Outreach",
            "Summary": "Added to Blaze Intelligence pipeline - research phase",
            "Next Action": "Complete organization research and identify key contacts",
            "Next Action Date": "+3 days"
          }
        }
      ]
    },
    {
      "name": "Follow-up Reminder",
      "trigger": "Field updated in Interactions",
      "conditions": [
        {
          "field": "Next Action Date",
          "condition": "is today"
        }
      ],
      "actions": [
        {
          "type": "sendEmail",
          "to": "ahump20@outlook.com",
          "subject": "Follow-up Required: {Organization Name}",
          "body": "Action needed: {Next Action}\nOrganization: {Organization Name}\nContact: {Contact Name}\nLast interaction: {Summary}"
        }
      ]
    }
  ]
}