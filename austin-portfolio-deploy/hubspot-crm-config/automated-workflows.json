{
  "workflows": [
    {
      "workflowName": "New Lead Welcome & Qualification",
      "workflowId": "new_lead_qualification",
      "description": "Automated welcome sequence and initial qualification for new leads",
      "trigger": {
        "type": "form_submission",
        "criteria": "Any form submission on blaze-intelligence.com"
      },
      "enrollment": {
        "triggers": ["form_submission", "list_addition", "manual_enrollment"],
        "reenrollment": false
      },
      "actions": [
        {
          "delay": "immediate",
          "type": "send_email",
          "template": "welcome_new_lead",
          "subject": "Welcome to Blaze Intelligence - Your Analytics Game Changer",
          "personalization": {
            "sender_name": "Austin Humphrey",
            "sender_email": "ahump20@outlook.com",
            "sender_signature": "Austin Humphrey\\nFounder, Blaze Intelligence\\n(210) 273-5538"
          }
        },
        {
          "delay": "2 hours",
          "type": "internal_notification",
          "action": "create_task",
          "assignee": "Austin Humphrey",
          "task_title": "New Lead: Follow up within 24 hours",
          "priority": "high"
        },
        {
          "delay": "1 day",
          "type": "conditional_branch",
          "condition": "has_not_been_contacted",
          "true_action": {
            "type": "send_email",
            "template": "follow_up_day_1",
            "subject": "Quick question about your analytics needs"
          }
        },
        {
          "delay": "3 days",
          "type": "update_property",
          "property": "qualification_status",
          "value": "needs_follow_up"
        }
      ]
    },
    {
      "workflowName": "Hot Lead Fast Track",
      "workflowId": "hot_lead_fasttrack",
      "description": "Expedited workflow for high-scoring leads",
      "trigger": {
        "type": "property_change",
        "property": "blaze_lead_score",
        "operator": "greater_than_or_equal",
        "value": 75
      },
      "actions": [
        {
          "delay": "immediate",
          "type": "internal_notification",
          "action": "slack_notification",
          "message": "üî• HOT LEAD ALERT: {{contact.firstname}} {{contact.lastname}} from {{company.name}} scored {{contact.blaze_lead_score}} points!"
        },
        {
          "delay": "30 minutes",
          "type": "send_email",
          "template": "hot_lead_priority_outreach",
          "subject": "{{contact.firstname}} - Priority Analytics Consultation Available"
        },
        {
          "delay": "2 hours",
          "type": "create_task",
          "assignee": "Austin Humphrey",
          "task_title": "HOT LEAD: Schedule demo call with {{contact.firstname}} {{contact.lastname}}",
          "priority": "urgent",
          "due_date": "1 day"
        }
      ]
    },
    {
      "workflowName": "Demo Scheduled Follow-Up",
      "workflowId": "demo_scheduled_workflow",
      "description": "Pre and post-demo automation sequence",
      "trigger": {
        "type": "meeting_scheduled",
        "meeting_type": "demo"
      },
      "actions": [
        {
          "delay": "1 day before meeting",
          "type": "send_email",
          "template": "demo_reminder_preparation",
          "subject": "Tomorrow's Demo - What to Expect & How to Prepare"
        },
        {
          "delay": "2 hours after meeting",
          "type": "conditional_branch",
          "condition": "meeting_outcome_positive",
          "true_action": {
            "type": "send_email",
            "template": "demo_follow_up_positive",
            "subject": "Great demo today - Your custom analytics preview"
          },
          "false_action": {
            "type": "send_email",
            "template": "demo_follow_up_neutral",
            "subject": "Following up on today's discussion"
          }
        },
        {
          "delay": "1 day after meeting",
          "type": "create_task",
          "assignee": "Austin Humphrey",
          "task_title": "Send demo recap and next steps to {{contact.firstname}}"
        }
      ]
    },
    {
      "workflowName": "Proposal Sent Nurture",
      "workflowId": "proposal_nurture",
      "description": "Follow-up sequence after proposal submission",
      "trigger": {
        "type": "deal_stage_change",
        "stage": "proposal"
      },
      "actions": [
        {
          "delay": "immediate",
          "type": "send_email",
          "template": "proposal_submitted",
          "subject": "Your Blaze Intelligence Proposal - Next Steps"
        },
        {
          "delay": "3 days",
          "type": "send_email",
          "template": "proposal_value_reinforcement",
          "subject": "The ROI behind your 67-80% cost savings"
        },
        {
          "delay": "7 days",
          "type": "create_task",
          "assignee": "Austin Humphrey",
          "task_title": "Follow up on proposal with {{contact.firstname}} - Check for questions",
          "priority": "high"
        },
        {
          "delay": "14 days",
          "type": "conditional_branch",
          "condition": "no_response_to_proposal",
          "true_action": {
            "type": "send_email",
            "template": "proposal_check_in",
            "subject": "Checking in on your analytics decision"
          }
        }
      ]
    },
