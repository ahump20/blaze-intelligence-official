# Blaze Intelligence Environment Configuration
# Copy this file to .env and update with your actual values

# API Keys (Required for full functionality)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
SPORTSRADAR_API_KEY=your_sportsradar_api_key
ESPN_API_KEY=your_espn_api_key

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Database Configuration (if using)
MONGODB_URI=mongodb://localhost:27017/blaze-intelligence
POSTGRES_URL=postgresql://user:password@localhost:5432/blaze
REDIS_URL=redis://localhost:6379

# Alert Channels
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_API_KEY=your_pagerduty_api_key
EMAIL_SMTP_HOST=smtp.sendgrid.net
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=apikey
EMAIL_SMTP_PASS=your_sendgrid_api_key

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Security
JWT_SECRET=your_secure_jwt_secret_key
ENCRYPTION_KEY=your_32_character_encryption_key

# Environment
NODE_ENV=production
API_VERSION=1.0.0
CACHE_TTL=300

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your_datadog_api_key

# Custom Domain (optional)
CUSTOM_DOMAIN=blaze-intelligence.com
SSL_CERT_PATH=/path/to/ssl/cert
SSL_KEY_PATH=/path/to/ssl/key