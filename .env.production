# Production Environment for GitHub Pages
# These are safe defaults for public deployment

# ===========================================
# MLB API Configuration (Demo Mode)
# ===========================================
REACT_APP_MLB_TEAM_ID=114
REACT_APP_MLB_SEASON=2025

# ===========================================
# Features Toggle (Demo Mode)
# ===========================================
REACT_APP_ENABLE_DISCORD=false
REACT_APP_ENABLE_TRACKMAN=false
REACT_APP_ENABLE_CHAMPION_ANALYSIS=true
REACT_APP_ENABLE_DATA_LAB=false
REACT_APP_ENABLE_LIVE_MODE=false
REACT_APP_ENABLE_AI_CHAT=false
REACT_APP_ENABLE_REAL_TIME=false
REACT_APP_ENABLE_SOCIAL_SHARING=true

# ===========================================
# Performance Settings
# ===========================================
REACT_APP_CACHE_TTL=300000
REACT_APP_POLL_INTERVAL=60000
REACT_APP_LOG_LEVEL=warn

# ===========================================
# GitHub Pages Deployment
# ===========================================
REACT_APP_GITHUB_PAGES=true
REACT_APP_DEPLOYMENT_ENV=production
REACT_APP_DEMO_MODE=true

# ===========================================
# External APIs (Public endpoints only)
# ===========================================
REACT_APP_MLB_STATS_API=https://statsapi.mlb.com/api/v1
REACT_APP_BASEBALL_SAVANT_API=https://baseballsavant.mlb.com