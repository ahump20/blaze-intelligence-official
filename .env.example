# Blaze Intelligence API Configuration
# Copy this file to .env and add your actual API keys

# MLB Stats API (Free, no key needed for basic access)
MLB_API_BASE=https://statsapi.mlb.com/api/v1

# ESPN API
ESPN_API_KEY=your_espn_api_key_here

# SportsRadar APIs
SPORTRADAR_MLB_KEY=your_sportradar_mlb_key_here
SPORTRADAR_NFL_KEY=your_sportradar_nfl_key_here
SPORTRADAR_NBA_KEY=your_sportradar_nba_key_here
SPORTRADAR_NCAA_KEY=your_sportradar_ncaa_key_here

# College Football Data API
CFBD_API_KEY=your_college_football_data_api_key_here

# Perfect Game API (Youth Baseball)
PERFECT_GAME_API_KEY=your_perfect_game_api_key_here
PERFECT_GAME_API_SECRET=your_perfect_game_api_secret_here

# Statcast (Advanced Baseball Analytics)
STATCAST_API_KEY=your_statcast_api_key_here

# NBA Stats API
NBA_STATS_HEADERS_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here
CLOUDFLARE_ZONE_ID=your_zone_id_here

# WebSocket Configuration
WS_PORT=8080
WS_SECURE=true

# Monitoring
MONITORING_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ANALYTICS_ENDPOINT=https://analytics.blaze-intelligence.com/v1/events
SENTRY_DSN=your_sentry_dsn_here

# OpenAI (for advanced analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud Vision (for additional video analysis)
GOOGLE_CLOUD_PROJECT_ID=your_project_id_here
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-cloud-key.json

# AWS (for S3 video storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=blaze-video-storage

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/blaze_intelligence

# Environment
NODE_ENV=production
LOG_LEVEL=info