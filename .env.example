# Blaze Intelligence Environment Variables
# Copy this file to .env and configure your values

# ===========================================
# MLB API Configuration
# ===========================================
REACT_APP_MLB_TEAM_ID=114
REACT_APP_MLB_SEASON=2025

# ===========================================
# Discord Bot (Optional)
# ===========================================
REACT_APP_DISCORD_TOKEN=your_discord_bot_token
REACT_APP_DISCORD_CLIENT_ID=your_client_id
REACT_APP_DISCORD_CHANNEL_IDS=channel1,channel2

# ===========================================
# Trackman Baseball (Optional)
# ===========================================
REACT_APP_TRACKMAN_CLIENT_ID=your_client_id
REACT_APP_TRACKMAN_CLIENT_SECRET=your_secret
REACT_APP_TRACKMAN_USERNAME=your_username
REACT_APP_TRACKMAN_PASSWORD=your_password

# ===========================================
# Database (Optional - for full functionality)
# ===========================================
REACT_APP_DATABASE_URL=postgresql://user:pass@localhost:5432/blaze_db
REACT_APP_REDIS_URL=redis://localhost:6379

# ===========================================
# External APIs (Optional)
# ===========================================
REACT_APP_BASEBALL_SAVANT_API=https://baseballsavant.mlb.com
REACT_APP_MLB_STATS_API=https://statsapi.mlb.com/api/v1
REACT_APP_SPORTSRADAR_API_KEY=your_sportsradar_api_key
REACT_APP_GEMINI_API_KEY=your_gemini_api_key

# ===========================================
# Authentication (Optional)
# ===========================================
REACT_APP_AUTH0_DOMAIN=your-auth0-domain.auth0.com
REACT_APP_AUTH0_CLIENT_ID=your-auth0-client-id

# ===========================================
# Stripe (Optional)
# ===========================================
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ===========================================
# App Configuration
# ===========================================
REACT_APP_API_BASE_URL=https://api.blazeintelligence.com
REACT_APP_WEBSOCKET_URL=wss://realtime.blazeintelligence.com

# ===========================================
# Analytics (Optional)
# ===========================================
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# ===========================================
# Features Toggle
# ===========================================
REACT_APP_ENABLE_DISCORD=true
REACT_APP_ENABLE_TRACKMAN=false
REACT_APP_ENABLE_CHAMPION_ANALYSIS=true
REACT_APP_ENABLE_DATA_LAB=true
REACT_APP_ENABLE_LIVE_MODE=true
REACT_APP_ENABLE_AI_CHAT=true
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_SOCIAL_SHARING=true

# ===========================================
# Performance Settings
# ===========================================
REACT_APP_CACHE_TTL=60000
REACT_APP_POLL_INTERVAL=30000
REACT_APP_LOG_LEVEL=info

# ===========================================
# GitHub Pages Deployment
# ===========================================
# These are automatically set by GitHub Actions
# REACT_APP_GITHUB_PAGES=true
# REACT_APP_DEPLOYMENT_ENV=production