# Blaze Intelligence Environment Variables
# Copy to .env and fill in your actual values

# SportsRadar API (for real-time sports data)
SPORTSRADAR_API_KEY=your_sportsradar_api_key_here

# OpenAI API (for AI analytics)
OPENAI_API_KEY=sk-your_openai_key_here

# Anthropic API (for Claude integration)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# Cloudflare (for Workers and deployment)
CLOUDFLARE_API_TOKEN=your_cloudflare_token_here
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# Airtable (for Research Hub data)
AIRTABLE_API_KEY=keyYourAirtableApiKey
AIRTABLE_BASE_ID=appYourBaseIdHere

# Notion (for CMS integration)
NOTION_API_KEY=secret_your_notion_integration_token
NOTION_DATABASE_ID=your_database_id_here

# HubSpot (for CRM integration)
HUBSPOT_API_KEY=pat-na1-your-hubspot-key-here

# Database (if using D1 or other)
DATABASE_URL=your_database_connection_string

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
SENTRY_DSN=your_sentry_dsn_here

# Environment
NODE_ENV=development
API_BASE_URL=https://blaze-worker.humphrey-austin20.workers.dev

# Security
JWT_SECRET=your_jwt_secret_for_api_authentication
API_KEY_ENCRYPTION_KEY=your_32_character_encryption_key

# Email (for contact forms)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_email_password

# Feature Flags
ENABLE_LIVE_DATA=false
ENABLE_NIL_CALCULATOR=false
ENABLE_BETA_FEATURES=false