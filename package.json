{
  "name": "blaze-intelligence-website",
  "version": "1.0.0",
  "description": "Elite sports analytics platform for championship teams",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate:stats": "echo 'Stats validation skipped'",
    "validate:pricing": "node -e \"const manager = require('./src/js/marketing-stats.js'); const m = new manager(); m.loadStats().then(() => console.log('Pricing validation:', m.validateCompetitivePricing()))\"",
    "security:scan": "echo 'Security scan placeholder'",
    "security:protect": "echo 'Security protect placeholder'",
    "build:md": "node scripts/build-md.js",
    "build": "npm run build:md && npm run build:prod",
    "build:prod": "node scripts/build-production.js",
    "deploy": "npm run build && npx wrangler pages deploy ./dist",
    "deploy:pages": "echo 'Deploy to Cloudflare Pages'",
    "start": "NODE_ENV=production node server.js",
    "start:prod": "NODE_ENV=production PM2_HOME=.pm2 npx pm2 start ecosystem.config.cjs",
    "start:production": "NODE_ENV=production PM2_HOME=.pm2 npx pm2 start ecosystem.config.cjs",
    "dev": "NODE_ENV=development node server.js",
    "logs": "npx pm2 logs",
    "monitor": "npx pm2 monit",
    "stop": "npx pm2 stop all",
    "preview": "npx wrangler pages dev ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/austinhumphrey/blaze-intelligence-website.git"
  },
  "keywords": [
    "sports",
    "analytics",
    "championship",
    "ai",
    "machine-learning",
    "performance"
  ],
  "author": "Austin Humphrey",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "wrangler": "^4.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.min.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "test": "tests"
  },
  "bugs": {
    "url": "https://github.com/austinhumphrey/blaze-intelligence-website/issues"
  },
  "homepage": "https://github.com/austinhumphrey/blaze-intelligence-website#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.61.0",
    "@balldontlie/sdk": "^1.2.2",
    "@notionhq/client": "^4.0.2",
    "@sendgrid/mail": "^8.1.5",
    "aos": "^2.3.4",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "countup.js": "^2.9.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "gsap": "^3.13.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^16.2.0",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "octokit": "^3.1.2",
    "openai": "^5.20.0",
    "particles.js": "^2.0.0",
    "pg": "^8.16.3",
    "pm2": "^6.0.10",
    "redis": "^5.8.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stripe": "^18.5.0",
    "three": "^0.180.0",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
